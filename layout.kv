<TaskWidget>:
    orientation: 'horizontal'
    spacing: 10
    
    Label:
        text: root.task_text
        size_hint_x: 0.7
        valign: 'middle'
        markup: True
        
    Button:
        text: 'Complete'
        size_hint_x: 0.15
        on_release: root.complete_task()
        
    Button:
        text: 'Delete'
        size_hint_x: 0.15
        on_release: root.delete_task()

ToDoApp:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 20
        
        TextInput:
            hint_text: 'Enter a new task...'
            multiline: False
            size_hint_y: None
            height: 40
            id: task_input
        
        Button:
            text: 'Add Task'
            size_hint_y: None
            height: 40
            on_release: root.add_task(task_input.text)
        
        ScrollView:
            GridLayout:
                id: tasks_layout
                cols: 1
                spacing: 5
                size_hint_y: None
                height: self.minimum_height
